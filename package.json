{
  "name": "docsy",
  "version": "1.0.0-21",
  "description": "A syntax for Component based documents",
  "keywords": [],
  "homepage": "https://github.com/etienne-dldc/docsy#readme",
  "bugs": {
    "url": "https://github.com/etienne-dldc/docsy/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/etienne-dldc/docsy.git"
  },
  "license": "MIT",
  "author": "Etienne Dldc",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/mod.mjs",
      "require": "./dist/mod.js"
    }
  },
  "main": "./dist/mod.js",
  "module": "./dist/mod.mjs",
  "types": "./dist/mod.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist deno_dist && tsup src/mod.ts --format esm,cjs --dts && denoify",
    "build:watch": "tsup src/mod.ts --format esm,cjs --dts --watch",
    "dev": "tsup src/mod.ts --format esm,cjs --watch",
    "lint": "prettier src --check && eslint src && tsc --noEmit",
    "lint:fix": "prettier src --write && eslint src --fix",
    "release": "yarn run build && np",
    "test": "yarn run lint && jest --coverage",
    "test:cov:watch": "jest --coverage --watch --all",
    "test:run": "jest",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch"
  },
  "dependencies": {
    "tslib": "^2.4.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "denoify": "^0.11.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "fs-extra": "^10.1.0",
    "jest": "^27.5.1",
    "np": "^7.6.1",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.4",
    "tsup": "^5.12.6",
    "typescript": "^4.6.3"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
